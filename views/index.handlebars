<div class="jumbotron">
  <div class="text-center">
    <h1>Val's Burger Joint</h1>
    <p>Come enjoy the world's most ridiculous burgers!</p>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
  <div class="col-sm-4">
    <h2>Burgers List!</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="burger_id" value="{{this.id}}">
              <button type="submit">EAT TIME!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>


  <div class="col-sm-4">
    <h2>Burgers that are devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
